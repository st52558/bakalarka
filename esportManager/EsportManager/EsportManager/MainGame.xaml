<Window x:Class="EsportManager.MainGame"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EsportManager"
        mc:Ignorable="d"
        Title="MainGame" Height="450" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top" Height="20" VerticalAlignment="Top">
            <MenuItem Header="Hra">
                <MenuItem Header="Návod" />
                <Separator />
                <MenuItem Header="Ukončit" />
            </MenuItem>
            <MenuItem Header="Procházet">
                <MenuItem Header="Hráči" />
                <MenuItem Header="Volní hráči" />
                <MenuItem Header="Trh s hráči" />
                <Separator />
                <MenuItem Header="Týmy" />
                <Separator />
                <MenuItem Header="Volní zaměstnanci" />
            </MenuItem>
            <MenuItem Header="Tým">
                <MenuItem Header="Sponzoři" />
                <MenuItem Header="Přehled" />
                <MenuItem Header="Trénink" />
                <MenuItem Header="Cestování" />
            </MenuItem>
            <MenuItem Header="Turnaje">
                <MenuItem Name="RegistererdTournaments" Header="Přihlášené" Click="RegisteredTournamentClick" />
                <MenuItem Header="Volné turnaje tento měsíc" />
            </MenuItem>
        </Menu>
        <Button Name="NextDayButton" Content="Button" HorizontalAlignment="Left" Margin="278,143,0,0" VerticalAlignment="Top" Width="75" Click="GoToNextDay"/>
        
        
    </DockPanel>
</Window>
