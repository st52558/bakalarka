<Window x:Class="TeamEdit.AddSection"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TeamEdit"
        mc:Ignorable="d"
        Title="Přidat sekci" Height="140" Width="250" ResizeMode="NoResize" FontFamily="Verdana">
    <Grid>
        <ComboBox Name="SectionsCB" Margin="10,10,10,0" VerticalAlignment="Top" Height="30"/>
        <Button Name="AddButton" Content="Přidat" HorizontalAlignment="Left" Margin="10,60,0,0" VerticalAlignment="Top" Width="100" Height="30" Click="AddSectionClick"/>
        <Button Name="CancelButton" Content="Zrušit" Margin="134,60,10,0" VerticalAlignment="Top" Height="30" Click="CancelClick"/>

    </Grid>
</Window>
